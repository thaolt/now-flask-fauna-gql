{
    "version": 2,
    "builds": [
        {
            "src": "api/*.py",
            "use": "@now/python"
        },
        {
            "src": "package.json",
            "use": "@now/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        { "handle": "filesystem" },
        {
            "src": "/api/.*",
            "dest": "/api/index.py"
        },
        {
            "src": "/.*",
            "dest": "/index.html"
        }
    ]
}